#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n; cin>>n;
    for(int i=1;i<=n;i++)
    {
        string str; cin>>str;
        int x=str.size();
        if(x<=10)
        {
            cout<<str<<endl;
        }
        else
        {
            cout<<str.front()<<x-2<<str.back()<<endl;
        }
    }
    return 0;
}
