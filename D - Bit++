#include<bits/stdc++.h>
using namespace std;
int main()
{
    int y,v=0;cin>>y;
    string str;
    for(int j=0;j<y;j++)
    {
        cin>>str;
        for (int i = 0; i < 3; i++)
        {
            if (str[i] == '+')
            {
                v++;
                break;
            }
            else if(str[i]=='-')
            {
                v--;
                break;
            }
        }
    }
cout<<v;


    return 0;
}
